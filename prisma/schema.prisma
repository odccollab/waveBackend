datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int     @id @default(autoincrement())
  identifiant  String  @unique
  nom          String
  prenom       String
  mail         String  @unique
  codeSecret   String
  telephone    String  @unique
  solde        Float
  photo        String?
  plafond      Float?
  type         String
  type_societe String?

  notifications        Notifications[]
  sentTransactions     Transactions[]  @relation("SentTransactions")
  receivedTransactions Transactions[]  @relation("ReceivedTransactions")
  infosImages          ContenuMedia[]  @relation("InfosImages")
  Contact              Contact[]
  userBanks            UserBank[]      @relation("UserBanks")

  @@map("user")
}

model Notifications {
  id      Int       @id @default(autoincrement())
  message String
  read_at DateTime?
  readed  Boolean   @default(false)
  date    DateTime
  userId  Int
  user    User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("notification")
}

model Transactions {
  id             Int      @id @default(autoincrement())
  montant        Float
  status         String
  date           DateTime
  solde_sender   Float
  solde_receiver Float?
  frais          Float
  type           String
  senderId       Int
  receiverId     Int?
  receiverString String?

  sender   User? @relation("SentTransactions", fields: [senderId], references: [id])
  receiver User? @relation("ReceivedTransactions", fields: [receiverId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@map("transaction")
}

model ContenuMedia {
  id     Int    @id @default(autoincrement())
  url    String
  userId Int?
  User   User?  @relation("InfosImages", fields: [userId], references: [id])

  @@map("contenumedia")
}

model Contact {
  id        Int    @id @default(autoincrement())
  nom       String
  prenom    String
  telephone String
  userId    Int
  User      User   @relation(fields: [userId], references: [id])

  @@map("contact")
}

model Bank {
  id       Int    @id @default(autoincrement())
  nom_bank String @unique
  photo    String

  userBanks UserBank[] @relation("UserBanks") // Relation avec UserBank

  @@map("bank")
}

model UserBank {
  userId Int
  bankId Int
  solde  Float

  user User @relation("UserBanks", fields: [userId], references: [id])
  bank Bank @relation("UserBanks", fields: [bankId], references: [id])

  @@id([userId, bankId]) // Cl√© primaire composite
  @@map("user_bank")
}
