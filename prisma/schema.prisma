generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int             @id @default(autoincrement())
  identifiant          String          @unique
  nom                  String
  prenom               String
  mail                 String          @unique
  codeSecret           String
  telephone            String          @unique
  solde                Float
  photo                String?
  plafond              Float?
  type                 String
  type_societe         String?
  Contact              Contact[]
  infosImages          ContenuMedia[]  @relation("InfosImages")
  notifications        Notifications[]
  receivedTransactions Transactions[]  @relation("ReceivedTransactions")
  sentTransactions     Transactions[]  @relation("SentTransactions")
  banques              Banque[]        @relation("UserBanque") // Many-to-many relation
  UserBanque           UserBanque[]

  @@map("user")
}

model Banque {
  id           Int          @id @default(autoincrement())
  nom          String
  adresse      String
  telephone    String       @unique
  utilisateurs User[]       @relation("UserBanque") // Many-to-many relation
  UserBanque   UserBanque[]

  @@map("banque")
}

model UserBanque {
  userId   Int
  banqueId Int
  user     User   @relation(fields: [userId], references: [id])
  banque   Banque @relation(fields: [banqueId], references: [id])

  @@id([userId, banqueId]) // Composite primary key for the join table
  @@map("user_banque")
}

model Notifications {
  id      Int       @id @default(autoincrement())
  message String
  read_at DateTime?
  readed  Boolean   @default(false)
  date    DateTime
  userId  Int
  user    User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("notification")
}

model Transactions {
  id             Int      @id @default(autoincrement())
  montant        Float
  status         String
  date           DateTime
  solde_sender   Float
  solde_receiver Float?
  frais          Float
  type           String
  senderId       Int
  receiverId     Int?
  receiverString String?
  receiver       User?    @relation("ReceivedTransactions", fields: [receiverId], references: [id])
  sender         User     @relation("SentTransactions", fields: [senderId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@map("transaction")
}

model ContenuMedia {
  id     Int    @id @default(autoincrement())
  url    String
  userId Int?
  User   User?  @relation("InfosImages", fields: [userId], references: [id])

  @@map("contenumedia")
}

model Contact {
  id        Int    @id @default(autoincrement())
  nom       String
  prenom    String
  telephone String
  userId    Int
  User      User   @relation(fields: [userId], references: [id])

  @@map("contact")
}
